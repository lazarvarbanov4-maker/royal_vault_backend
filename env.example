# Royal Vault Portal - Backend Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server port (default: 5000)
PORT=5000

# Environment (development, production, test)
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/royal-vault-portal

# Alternative MongoDB Atlas connection
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/royal-vault-portal?retryWrites=true&w=majority

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# JWT secret key (generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here

# JWT expiration time (default: 7d)
JWT_EXPIRES_IN=7d

# Refresh token expiration time (default: 30d)
REFRESH_TOKEN_EXPIRES_IN=30d

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email service configuration (for password reset, notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Alternative email services:
# EMAIL_SERVICE=outlook
# EMAIL_SERVICE=yahoo
# EMAIL_SERVICE=smtp

# SMTP configuration (if using custom SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size for uploads (in MB)
MAX_FILE_SIZE=500

# Allowed file types for uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain,video/mp4,video/avi,video/mov,video/wmv,video/flv,video/webm

# Upload directory
UPLOAD_DIR=uploads

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Password requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=true
REQUIRE_NUMBERS=true
REQUIRE_UPPERCASE=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE=logs/app.log

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env
# 2. Replace placeholder values with your actual configuration
# 3. Never commit .env to version control
# 4. For production, set these variables in your hosting platform

# =============================================================================
# DATABASE SETUP
# =============================================================================
# Local MongoDB:
# 1. Install MongoDB locally
# 2. Start MongoDB service
# 3. Use: mongodb://localhost:27017/royal-vault-portal

# MongoDB Atlas (Cloud):
# 1. Create account at https://www.mongodb.com/atlas
# 2. Create a new cluster
# 3. Create database user
# 4. Get connection string
# 5. Use: mongodb+srv://username:password@cluster.mongodb.net/royal-vault-portal

# =============================================================================
# JWT SECRET GENERATION
# =============================================================================
# Generate a strong JWT secret:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# =============================================================================
# EMAIL SETUP (Gmail)
# =============================================================================
# 1. Enable 2-factor authentication on your Gmail account
# 2. Generate an App Password:
#    - Go to Google Account settings
#    - Security > 2-Step Verification > App passwords
#    - Generate password for "Mail"
# 3. Use the app password as EMAIL_PASS

# =============================================================================
# SECURITY NOTES
# =============================================================================
# - Never commit .env to version control
# - Use different values for development and production
# - Regularly rotate your JWT secrets
# - Use strong, unique passwords
# - Enable HTTPS in production
# - Set up proper CORS policies
# - Monitor your application logs
